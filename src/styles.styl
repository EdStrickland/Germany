/* You can add global styles to this file, and also import other style files */
* {
	box-sizing: border-box;
}

html,
body {
	margin: 0;
	
	height: 100%;
	width: 100%;
}

/* header */

header {
	display: flex;
	justify-content: center;

	padding: 0 100px;

	height: 50px;
	width: 100%;
	
	/* border: 1px solid #000; */
	background-color: #103F5E;
	color: #FFFFFF;

	line-height: 50px;
}

header a {
	text-decoration: none;
	color: #FFFFFF;
}

header ul {
	margin: 0;
	padding: 0;

	text-decoration: none;
	list-style: none;
}

#header-selections>ul,
#header-lists>ul {
	display: flex;

	height: 100%;
}

#header-title {
	height: 100%;
	width: 100px;
}

#header-content {
	display: flex;
	justify-content: space-between;

	width: calc(100% - 100px);
	height: 100%;
}

#header-selections {
	height: 100%;
}

#header-selections li {
	padding: 0 15px;
}

header li:hover {
	cursor: pointer;
	background-color: #3D7DA6;
}

header .selected {
	background-color: #3D7DA6;
}

#header-lists {
	height: 100%;
}

#header-lists>ul>li {
	position: relative;

	width: 50px;
	height: 100%;

	text-align: center;
}

.header-item-list {
	position: absolute;
	right:0;
	top: 49px;

	border: 1px solid #000;
}

.header-item-list li {
	padding: 0 20px;

	min-width: 150px;

	text-align: left;
}

/* main */

main {
	// padding: 0 100px;
	padding: 0;

	width: 100%;
	height: calc(100% - 150px);	

	/* border: 1px solid #000; */
}


/* footer */

footer {
	padding: 0 100px;

	width: 100%;
	height: 100px;

	/* border: 1px solid #000; */
}