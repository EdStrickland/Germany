
/* table */
.table-container {
	width: 1060px;

	margin: 0 auto;
}

.table-container h1{
	margin-top: 100px;
	color: #103F5E;
}

table {
	display: block;
	
	width: 1060px;

    border-right: 0;
    border-bottom: 0;
	border-radius: 2px;
	
	overflow-y: hidden;
}

thead {
	display: block;
	
	width: 1060px;
	height: 50px;
	line-height: 50px;

	border-radius: 3px;
	background-color: #F0F2F5;
    overflow-x: hidden;
}

tbody {
    /*height: 651px;*/
    /*overflow: auto; */
    display: block;
    width: 100%;
}

tbody tr {
	border-bottom: 1px solid #F0F2F5;
	height: 50px;
	line-height: 45px;
}

tbody tr:hover {
	cursor: pointer;
}

td {
    padding:  5px 10px;
}

tr {
    display: block;
}

tr:hover {
    background-color: #efefef;
}

td, th {
    width: 151px;   
}

.table-ranking {
	display: block;
	height: 44px;	
	line-height: 44px;
	margin: 0 3px;
	background-color: #fff;
}