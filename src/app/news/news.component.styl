.news 
	margin 0 auto
	padding-top 20px;
	width 1000px;
	min-height 100%
	background-size 100%
	column-count 4
	column-gap 0

	div
		box-sizing border-box
		break-inside avoid
		padding 10px
		h3
			margin 5px 0
		div
			display flex
			flex-direction column
			justify-content center
			align-items center
			padding 10px
			height auto
			font-size 20px
			color #686868
			box-sizing border-box
			border 1px solid #ccc